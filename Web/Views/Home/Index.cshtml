@using Plugin
@model IEnumerable<IPlugin>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Plugins</h1>
    <br/>
    <br/>
    @foreach (IPlugin p in Model)
    {
        <h4>@p.GetMessage() <a asp-action="DeletePlugin" asp-route-id="@p.Id">Delete</a></h4>
    }
    
    <br/>

    <form method="post" asp-action="Upload" enctype="multipart/form-data">
        <input type="file" name="file" />
        <button type="submit">Upload</button>
    </form>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
